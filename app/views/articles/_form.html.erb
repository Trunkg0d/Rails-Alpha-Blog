<div class="container">
  <% if @article.errors.any? %> 
    <h2>The following errors prevented the article from being saved</h2> 
    <ul> 
      <% @article.errors.full_messages.each do |msg| %> 
        <li><%= msg %></li> 
      <% end %> 
    </ul>
  <% end %>

  <div class = "row justify-content-center">
    <div class="col-10 mt-2">
      <%= form_with(model: @article, class: "shadow p-3 mb-2 bg-secondary rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light"%><br/> 
          <div class="col-10 justify-content-md-center">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title or article" %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <%= f.label :description, class: "col-2 col-form-label text-light"%><br/>
          <div class="col-10 justify-content-md-center">
            <%= f.text_area :description, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <div class="col-2 mt-3">
            <%= f.submit class: "btn btn-outline-light btn-lg"%>
          </div> 
        </div>
      <% end %>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-12 text-center mt-3">
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "btn btn-link" %>
      </div> 
    </div>
    
  </div>
</div>