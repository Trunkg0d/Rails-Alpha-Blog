<div id="page-content">
  <h1 class="text-center m-4">Articles listing page</h1>
  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic" style="font-style: italic">
              <small>by Trunk</small>
            </div>
            <div class="card-body">
              <h5 class="card-title"><td><%= link_to article.title, article_path(article), class: "text-success" %></td></h5>
              <p class="card-text"><td><%= truncate(article.description, length: 100) %></td></p>
              <td><%= link_to 'Show', article_path(article), class:"btn btn-outline-success" %></td>
              <td><%= link_to 'Edit', edit_article_path(article), class:"btn btn-outline-info" %></td>
              <td><%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
              <%# <%= button_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
            <div class="card-footer text-body-secondary">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago,
              edited <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>